<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.banhada.payment.PaymentProcess2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#A4C480"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:gravity="center_horizontal"
            android:text="결제하기"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/outline_menu_black_24" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="283dp"
            android:layout_marginRight="283dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/outline_arrow_back_black_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:text="[결제수단 선택]"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />




    <Button
        android:layout_marginTop="60dp"
        android:id="@+id/payment_creditbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신용카드"
        android:textColor="#000000"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/payment_bankbookbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="무통장 입금"
        android:textColor="#000000"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/payment_phonebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="휴대폰 결제"
        android:textColor="#000000"/>

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/imageView11"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/outline_payment_black_24" />


</LinearLayout>