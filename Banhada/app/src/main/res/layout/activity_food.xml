<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#A4C480"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Meal Kit"
                android:textColor="#000000"
                android:textSize="20dp" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgv_kit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_kit_name_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="45dp"
                    android:gravity="center_horizontal"
                    android:text="상품명"
                    android:textAlignment="center"
                    android:textColor="#3C3A3A"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_kit_name_activity_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="밀키트 이름"
                    android:textAlignment="center"
                    android:textColor="#3C3A3A"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_kit_price_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="정가"
                    android:textAlignment="center"
                    android:textColor="#3C3A3A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_kit_price_activity_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="상품 가격"
                    android:textAlignment="center"
                    android:textColor="#3C3A3A"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="#3c3A3A"
            android:layout_width="360dp"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kit_detail_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 설명"
                android:textColor="#3C3A3A"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_kit_detail_activity_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:text="이 상품은. . ."
                android:textAlignment="center"
                android:textColor="#3C3A3A"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_add_detail_food"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_style1"
                android:text="펼치기   >>"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kit_alergy_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알레르기 정보"
                android:textColor="#3C3A3A"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_kit_alergy_activity_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:text="대두, 땅콩"
                android:textAlignment="center"
                android:textColor="#3C3A3A"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kit_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피"
                android:textColor="#3C3A3A"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_add_detail_food2"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_style1"
                android:text="펼치기   >>"
                android:textColor="#000000" />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="#3c3A3A"
            android:layout_width="360dp"
            android:layout_height="1px"/>

        <TextView
            android:id="@+id/tv_kit_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="20dp"
            android:text="재료 골라 담기"
            android:textColor="#3C3A3A"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>

            <!--            <Spinner-->
            <!--                android:id="@+id/spinner3"-->
            <!--                android:layout_width="80dp"-->
            <!--                android:layout_height="wrap_content"-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                 android:id="@+id/btn_delete_spinner"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="삭제" />

            <Button
                android:id="@+id/btn_more_find"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="추가할 상품 찾기" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="210dp">
        <TextView
            android:id="@+id/tv_price_total1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="70dp"
            android:text="결제금액"
            android:textColor="#3C3A3A"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_price_total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="20000원"
            android:textColor="#3C3A3A"
            android:textSize="15dp" />
    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:text="결제하기" />

</RelativeLayout>


