<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#A4C480"
        app:layout_constraintTop_toTopOf="parent">

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:text="飯하다\n"-->
        <!--            android:textColor="#000000"-->
        <!--            android:textSize="20dp" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="20dp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/name_tv"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="ex) 반해영"/>

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="이메일"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email_tv"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="ex) aaa123@naver.com" />


    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="전화번호"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/phone_tv"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="ex) 010-1234-5678"  />


    <TextView
        android:id="@+id/userAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="주소"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_address_search"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style1"
        android:drawableRight="@drawable/search_icon"
        android:paddingRight="15dp"
        android:text="주소 검색"
        android:textSize="17dp" />
    <EditText
        android:id="@+id/edt_address"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="ex) 서울시 서대문구 남가좌2동 1-111"  />
    <EditText
        android:id="@+id/edt_address_detail"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="ex) 101호"  />


        <Button
            android:id="@+id/button13"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="15dp"
            android:text="회원가입 완료"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />


</LinearLayout>
