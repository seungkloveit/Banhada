<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.banhada.login.SignUp_Complete">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/party"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="37dp"
        android:text="飯하다에 오신 것을 환영합니다 :)"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n\n\n\n 나만의 커스터마이징 밀키트를 \n만나러 가볼까요?\n\n"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#A4C480 "
        android:text="밀키트 쇼핑하기" />

</LinearLayout>