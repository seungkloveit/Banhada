<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#A4C480"
        app:layout_constraintTop_toTopOf="parent">

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:text="飯하다\n"-->
        <!--            android:textColor="#000000"-->
        <!--            android:textSize="20dp" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="20dp" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:text="관리자 정보"
                android:textColor="#000000"
                android:textSize="17dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_id"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:hint="아이디 (이메일 주소)"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_duplication"
                    android:layout_width="100dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="중복확인"
                    android:textSize="15dp" />
            </LinearLayout>


            <EditText
                android:id="@+id/tv_pwd"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/tv_pwd_2"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/tv_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="이름 (실명 입력)"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/tv_tel_sign_up"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="휴대전화 번호 ( ' - ' 제외 )"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_born_date"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:hint="생년월일 (8자리 입력)"
                    android:textSize="15dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/sign_up_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남"
                        android:textSize="15dp"
                        android:theme="@style/CustomRadioButton" />

                    <RadioButton
                        android:id="@+id/sign_up_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="여"
                        android:textSize="15dp"
                        android:theme="@style/CustomRadioButton" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:text="마트 정보"
                android:textColor="#000000"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/tv_mart_name_sign"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:hint="상호"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/tv_mart_num_sign"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="사업자 번호"
                android:inputType="textPassword"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/tv_mart_represent_name_sign"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="대표자명"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/tv_mart_address_sign"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="주소"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/tv_mart_tel_sign"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="전화번호"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/tv_mart_time_sign"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="영업시간"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/tv_mart_holiday_sign"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="휴무일"
                android:textSize="15dp" />


            <Button
                android:id="@+id/mart_signup_clear"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="회원가입 완료"
                android:textSize="16dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>

