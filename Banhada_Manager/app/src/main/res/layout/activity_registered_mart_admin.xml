<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <TextView
        android:id="@+id/enrolledMartName"
        android:gravity="center_horizontal"
        android:text="등록 마트 관리"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="1dp">

        <TextView
            android:id="@+id/martName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:background="#A4C480"
            android:gravity="center_horizontal"
            android:text="마트 이름"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/martAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:background="#A4C480"
            android:gravity="center_horizontal"
            android:text="주소"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/martPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A4C480"
            android:gravity="center_horizontal"
            android:text="연락처"
            android:textSize="12sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:text="싱싱마트"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:text="서울특별시 강남구 도곡동 111-11"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:text="매장 번호 02)111-1111"
            android:textSize="12sp" />
    </TableRow>

</TableLayout>
